@using SherplexTickets.Core.ViewModels.MovieView
@model MovieDeleteViewModel

@{
    ViewBag.Title = "Изтрий Филма";
}

<div class="container" >
    <div class="row justify-content-center">
        <div class="col-md-6" style=" max-width: 18rem; " >
            <div class="card" >
                <div class="card h-100 text-center" style="width: 100%; ;border-radius: 1rem;">
                    <div style="position: relative;">
                        <img class="card-img-top" src="@Model.URLImage" alt="Book Image" style="max-width: 100%; border-radius: 1rem;">
                        <div style="position: absolute; bottom: 0; right: 0; background-color: rgba(0, 0, 0, 0.7); color: white; padding: 5px;border-radius: 0.3rem;">
                            <p class="m-0">@Model.Duration мин</p>
                        </div>
                        <div style="position: absolute; top: 0; start:0; background-color: rgba(0, 0, 0, 0.7); color: white; padding: 5px;border-radius:0.3rem;">
                            <p class="m-0">@Model.ReleaseDate</p>
                        </div>
                    </div>
                    <div class="card-body text-lg-center" style="margin: 0 auto;text-decoration:none !important;">
                        <h4 class="card-title" style="color:black; text-decoration:none;"><strong>@Model.Title</strong></h4>
                    </div>
                </div>
                 <div class="card-body text-lg-center" style="margin: 0 auto;text-decoration:none !important;">
                    <h4 class="" style="color:red; text-decoration:none; text-align:center">Сигурен ли си, че искаш да изтриеш филма</h4>
                    </div>
                <div class="card-footer d-flex justify-content-center">
                    <form asp-action="DeleteConfirmed" method="post" class="col-12">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="All" class="btn btn-secondary mb-1 w-100 p-3 fw-bold">Обратно към всички</a>
                        <button type="submit" class="btn btn-danger mb-1 w-100 p-3 fw-bold">Изтрий</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('@Url.Content("~/images/DeleteBackgroundMovie.png")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }


    .card {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .text-danger {
        color: #dc3545;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>