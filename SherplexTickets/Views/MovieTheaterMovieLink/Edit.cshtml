@using SherplexTickets.Core.ViewModels.TheaterLinkMovie

@model MovieTheaterDailyScheduleForMovieEditViewModel

@{
    ViewBag.Title = "Редактиране на графика Киносалон Филм";
}

<h2 class="text-center" style="color:goldenrod; background-color:rgb(0, 0, 0, 0.7); padding:1rem; width: 30rem; margin: 0 auto; border-radius:3rem;box-shadow: rgba(6, 24, 44, 0.4) 0px 0px 0px 2px, rgba(6, 24, 44, 0.65) 0px 4px 6px -1px, rgba(255, 255, 255, 0.08) 0px 1px 0px inset;">@ViewBag.Title</h2>
<hr />

<div class="row" style="font-size: 1.1rem;">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" style="background-color:rgb(0, 0,0, 0.7); padding:20px; box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px; border-radius: 1rem;">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.ShowTimeMovie" class="form-label-add-edit"><bold>Часове на даване на филма разделени с (" ")</bold></label>
                <input asp-for="@Model.ShowTimeMovie" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ShowTimeMovie" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Date" class="form-label-add-edit"><bold>Дата на излъчване на филма</bold></label>
                <input asp-for="@Model.Date" class="form-control" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit"><strong>Цена на билета</strong></label>
                <input asp-for="@Model.Price" class="form-control" type="text" pattern="[0-9]+([,.][0-9]+)?" title="Моля, въведете валидна ценова стойност (например: 17.50)" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Редактирай" />
                <a asp-controller="MovieTheater" asp-action="All" class="btn btn-warning mb-1 w-100 p-3 fw-bold">Всички киносалони</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/GenresSelector/GenresSelector.js"></script>

}
