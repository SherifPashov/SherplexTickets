@using SherplexTickets.Core.ViewModels.MovieTheater
@model MovieTheaterViewModel

@{
    ViewBag.Title = "Детайли";
}
<h2 class="text-center mt-4 mb-3" style="color:white;">@ViewBag.Title</h2>
<hr />

<div class="container" style="color:white; border: 2px solid white; background-color:rgb(0, 0, 0, 0.8); padding: 3px;">
    <div class="row justify-content-center align-items-start">

        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Book Image" style="max-width: 100%;" />
        </div>
        <div class="col-md-8" style=" margin-bottom: 1rem;">
            <div style=" height: 100%;">
                <h4 style="margin:20px auto;">@Model.Name</h4>
                <p style="margin-bottom: 0; padding-bottom: 20px; border:0px;"><strong>Резюме:</strong> </p>
            </div>
        </div>
       
        </div>
    </div>
</div>



<div class="text-center mt-3">
    <a asp-controller="MovieTheater" asp-action="All" class="btn btn-warning mb-1 w-100 p-3 fw-bold">Обратно към Всички</a>
    <a asp-controller="MovieTheater" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mb-1 w-100 p-3 fw-bold">Редактиране</a>
    <a asp-controller="MovieTheater" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mb-1 w-100 p-3 fw-bold">Изтрий</a>
</div>
</div>
<style>
    body {
        background-image: url('@Url.Content("~/images/DetailsBackgraundMovie.png")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>