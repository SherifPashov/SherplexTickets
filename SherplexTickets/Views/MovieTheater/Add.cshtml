@using SherplexTickets.Core.ViewModels.MovieTheater
@model MovieTheaterAddViewModel

@{
    ViewBag.Title = "Добави Киносалон";
}
<link rel="stylesheet" type="text/css" href="~/css/AddTheaterMovie.css">

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit"><strong>Име на Киносалона</strong></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Location" class="form-label-add-edit"><strong>Локация: </strong></label>
                <input asp-for="@Model.Location" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Contact" class="form-label-add-edit"><strong>Телефонен номер</strong></label>
                <input asp-for="@Model.Contact" class="form-control" aria-required="true" placeholder="Пример: +359888123456 или 020202020" />
                <span asp-validation-for="@Model.Contact" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit"><strong>Линк към снимка на киносалона(URL)</strong></label>
                <input asp-for="@Model.ImageUrl" class="form-control" type="text" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.OpeningTime" class="form-label-add-edit"><strong>Време на отваряне</strong></label>
                <input asp-for="@Model.OpeningTime" class="form-control" aria-required="true" type="time" />
                <span asp-validation-for="@Model.OpeningTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ClosingTime" class="form-label-add-edit"><strong>Време на затваряне</strong></label>
                <input asp-for="@Model.ClosingTime" class="form-control" aria-required="true" type="time" />
                <span asp-validation-for="@Model.ClosingTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
                <a asp-action="All" class="btn btn-secondary mb-1 w-100 p-3 fw-bold">Обратно към Всички</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/GenresSelector/GenresSelector.js"></script>
}
