@using SherplexTickets.Core.ViewModels.MovieView
@model MovieViewModel

@{
    ViewBag.Title = "Детайли";
}
<h2 class="text-center mt-4 mb-3" style="color:white;">@ViewBag.Title</h2>
<hr />

<div class="container" style="color:white; border: 2px solid white; background-color:rgb(17, 31, 52); padding: 3px;">
    <div class="row justify-content-center align-items-start">

        <div class="col-md-4 text-center">
            <img src="@Model.URLImage" class="img-fluid" alt="Book Image" style="max-width: 100%; height: 25rem" />
        </div>
        <div class="col-md-8" style=" margin-bottom: 1rem;">
            <div style=" height: 100%;">
                <h4 style="margin:20px auto;">@Model.Title</h4>
                <p style="margin-bottom: 0; padding-bottom: 20px; border:0px;"><strong>Резюме:</strong> @Model.Description</p>
            </div>
        </div>
        <div class="row" style="row-gap: 12px; padding:10px;">
            <div class="col-md-6" style="border-right: 2px solid white;border-top: 2px solid white; padding: 2rem; ">
                <p><strong>Година на Публикуване:</strong> @Model.ReleaseDate</p>
                <p><strong>Времетраене:</strong> @Model.Duration мин.</p>
                <p><strong>Режисьор:</strong> @Model.DirectorName</p>
            </div>
            <div class="col-md-6" style="border-top: 2px solid white; padding: 2rem; ">
                <p><strong>Жанр:</strong> @Model.GenresName</p>
                <p><strong>Актьори:</strong> @Model.ActorsName</p>
            </div>
        </div>
    </div>
</div>



    <div class="text-center mt-3">
        <a asp-controller="Movie" asp-action="All" class="btn btn-warning mb-1 w-100 p-3 fw-bold">Обратно към Всички</a>
        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mb-1 w-100 p-3 fw-bold">Редактиране</a>
        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mb-1 w-100 p-3 fw-bold">Изтрий</a>
    </div>
</div>
<style>
    body {
        background-image: url('@Url.Content("~/images/MovieDetails.png")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        
    }
</style>