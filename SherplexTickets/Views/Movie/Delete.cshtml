@using SherplexTickets.Core.ViewModels.MovieView
@model MovieDeleteViewModel

@{
    ViewBag.Title = "Изтрий Филма";
}
<link rel="stylesheet" type="text/css" href="~/css/DeleteMovie.css">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="card card-container">
                <div class="card h-100 text-center">
                    <div class="img-container" >
                        <img class="card-img-top" src="@Model.URLImage" alt="Movie Image">
                        <div class="duration">
                            <p class="m-0">@Model.Duration мин</p>
                        </div>
                        <div class="release-date">
                            <p class="m-0">@Model.ReleaseDate</p>
                        </div>
                    </div>
                    <div class="card-body text-lg-center">
                        <h4 class="title"><strong>@Model.Title</strong></h4>
                    </div>
                </div>
                <div class="card-body text-lg-center">
                    <h4 class="text-danger "><strong>Сигурен ли си, че искаш да изтриеш филма</strong></h4>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <form asp-action="DeleteConfirmed" method="post" class="col-12">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="All" class="btn btn-secondary mb-1 w-100 p-3 fw-bold">Обратно към всички</a>
                        <button type="submit" class="btn btn-danger mb-1 w-100 p-3 fw-bold">Изтрий</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
