@using SherplexTickets.Core.ViewModels.TheaterLinkMovie

@model MovieTheaterDailyScheduleForMovieEditViewModel

@{
    ViewBag.Title = "Редактиране на графика Киносалон - Филм";
}

<h2 class="text-center" style="color:goldenrod; background-color:rgb(17, 31, 52); padding:1rem; width: 30rem; margin: 0 auto; border-radius:3rem;box-shadow: 0px 0px 43px 9px goldenrod;">@ViewBag.Title</h2>
<hr />

<div class="row" style="font-size: 1.1rem;">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" style="background-color:rgb(17, 31, 52); padding:20px; box-shadow: 0px 0px 43px 9px goldenrod; border-radius: 1rem; color:goldenrod;">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.ShowTimeMovie" class="form-label-add-edit"><strong>Часове за започване на филма разделени с (" ")</strong></label>
                <input asp-for="@Model.ShowTimeMovie" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ShowTimeMovie" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Date" class="form-label-add-edit"><strong>Дата на излъчване на филма</strong></label>
                <input asp-for="@Model.Date" class="form-control" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit"><strong>Цена на билета</strong></label>
                <input asp-for="@Model.Price" class="form-control" type="text" value="@Model.Price"/>
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Редактирай" />
                <a asp-controller="MovieTheater" asp-action="All" class="btn btn-warning mb-1 w-100 p-3 fw-bold">Всички киносалони</a>
            </div>
        </form>
    </div>
</div>
<style>
    body {
        background-image: url('@Url.Content("~/images/DeleteMovieTheaterLinkMovie.png")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/GenresSelector/GenresSelector.js"></script>

}
