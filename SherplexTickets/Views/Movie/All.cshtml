@using SherplexTickets.Core.ViewModels.MovieView
@model IEnumerable<MovieAllViewModel>

@{
    ViewBag.Title = "Всички Филми";
}

<h2 class="text-center mt-4 mb-3">@ViewBag.Title</h2>
<hr />
<style>
    body{
        background-image: url('@Url.Content("~/images/AllBackgroundMovie.png")');
        color:white;
    }
</style>

<div class="container" style="background-image: url('@Url.Content("~/images/AllBackgroundMovie.png")'); background-size: cover; background-repeat: no-repeat; background-position: center;">
    
    <div class="text-center mb-4">
        <a asp-controller="Movie" asp-action="Add" class="btn btn-primary btn-lg">Добави филм</a>
    </div>

    <div class="text-center mb-4">
        <form asp-controller="Movie" asp-action="Search" method="get" class="row">
            <div class="col-md-11">
                <div class="form-group">
                    <input type="text" name="input" class="form-control" placeholder="Търсене... (На кирилица)" />
                </div>
            </div>
            <div class="col-md-1 d-flex justify-content-end">
                <div class="form-group">
                    <button type="submit" class="btn btn-warning mr-2">Търси</button>
                </div>
                <div class="form-group">
                    <a asp-controller="Movie" asp-action="All" class="btn btn-secondary ml-2">Изчисти</a>
                </div>
            </div>
        </form>
    </div>

    <div class="row justify-content-center">
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var movie in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 mb-lg-4 " >
                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="">

                        <div class="card h-100 text-center" style="width: 100%; background-color:rgb(51,160,215) ;border-radius: 1rem;">
                            <div style="position: relative;">
                                <img class="card-img-top" src="@movie.URLImage" alt="Book Image" style="max-width: 100%; max-height: 30rem; border-radius: 1rem;">
                                <div style="position: absolute; bottom: 0; right: 0; background-color: rgba(0, 0, 0, 0.7); color: white; padding: 5px;border-radius: 0.3rem;">
                                    <p class="m-0">@movie.Duration мин</p>
                                </div>
                                <div style="position: absolute; top: 0; start:0; background-color: rgba(0, 0, 0, 0.7); color: white; padding: 5px;border-radius:0.3rem;">
                                    <p class="m-0">@movie.YearPublished</p>
                                </div>
                            </div>
                            <div class="card-body text-lg-center" style="margin: 0 auto;text-decoration:none !important;">
                                <h4 class="card-title" style="color:white; text-decoration:none;"><strong>@movie.Title</strong></h4>
                            </div>
                        </div>
                    </a>
                </div>

            }
        }
        else
        {
            <h2 class="text-center mb-4">Няма намерени резултати!</h2>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
