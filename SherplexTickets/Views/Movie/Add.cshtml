@using SherplexTickets.Core.ViewModels.MovieView
@model MovieAddViewModel

@{
    ViewBag.Title = "Добави Филм";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label-add-edit"><bold>Заглавие</bold></label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Director" class="form-label-add-edit"><bold>Режисьор</bold></label>
                <input asp-for="@Model.Director" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Director" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ActorsName" class="form-label-add-edit"><bold>Имена на актьри отделени със "," или ", "</bold></label>
                <input asp-for="@Model.ActorsName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ActorsName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit"><bold>Резюме</bold></label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Duration" class="form-label-add-edit"><bold>Времетраене(минути)</bold></label>
                <input asp-for="@Model.Duration" class="form-control" aria-required="true" type="number" min="0">
                <span asp-validation-for="@Model.Duration" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ReleaseDate" class="form-label-add-edit"><bold>Година на Публикуване</bold></label>
                <input asp-for="@Model.ReleaseDate" class="form-control" type="date" />
                <span asp-validation-for="@Model.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.URLImage" class="form-label-add-edit"><bold>Линк към снимка на филма(URL)</bold></label>
                <input asp-for="@Model.URLImage" class="form-control" type="text" />
                <span asp-validation-for="@Model.URLImage" class="text-danger"></span>
            </div>

           
            <div class="mb-3">
                <label asp-for="@Model.GenreIds" class="form-label-add-edit"><bold>Жанр</bold></label>
                <div class="row">
                    @foreach (var category in Model.Genres)
                    {
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" id="@($"genre-{category.Id}")" name="GenreIds" value="@category.Id" class="form-check-input" @(Model.GenreIds.Contains(category.Id) ? "checked" : "")>
                                <label class="form-check-label" for="@($"genre-{category.Id}")">@category.Name</label>
                            </div>
                        </div>
                    }
                </div>
                <span asp-validation-for="@Model.GenreIds" class="text-danger"></span>
            </div>
           


            <div class="mb-3">
                <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
                <a asp-action="All" class="btn btn-secondary mb-1 w-100 p-3 fw-bold">Обратно към Всички</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/GenresSelector/GenresSelector.js"></script>
    
}