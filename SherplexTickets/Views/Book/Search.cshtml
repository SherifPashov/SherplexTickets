@using SherplexTickets.Core.ViewModels.BookView

@model IEnumerable<BookAllViewModel>

@{
    ViewBag.Title = "Търсени Книги";
}

<h2 class="text-center mt-4 mb-3">@ViewBag.Title</h2>
<hr />
<div class="text-center mb-4">
    <form asp-controller="Book" asp-action="Search" method="get" class="row">
        <div class="col-md-11">
            <div class="form-group">
                <input type="text" name="input" class="form-control" placeholder="Търсене... (На кирилица)" />
            </div>
        </div>
        <div class="col-md-1 d-flex justify-content-end">
            <div class="form-group">
                <button type="submit" class="btn btn-warning mr-2">Търси</button>
            </div>
            <div class="form-group">
                <a asp-controller="Book" asp-action="All" class="btn btn-secondary ml-2">Изчисти</a>
            </div>
        </div>
    </form>
</div>

<div class="row justify-content-center">
    @if (Model != null && Model.Count() > 0)
    {
        @foreach (var book in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 text-center border-dark">
                    <div class="card-img-container">
                        <img class="card-img-top img-fluid rounded" src="@book.ImageUrl" alt="Book Image">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title mb-0"><strong>@book.Title</strong></h4>
                        <p class="card-text"><strong>Автор:</strong> @book.Author</p>
                        <p class="card-text"><strong>Страници:</strong> @book.Pages</p>
                        <p class="card-text"><strong>Година на Издаване:</strong> @book.YearPublished</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-warning mb-1 w-100 p-3 fw-bold">Виж Повече</a>
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary mb-1 w-100 p-3 fw-bold">Редактирай</a>
                    </div>
                </div>
            </div>

        }
    }
    else
    {
        <h2 class="text-center mb-4">Няма намерени резултати!</h2>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}